<script>
  (function() {
    const root = document.querySelector('[data-hm-ra]') as HTMLElement;
    if (!root) return;

    const desktop = root.querySelector('[data-hm-desktop]') as HTMLElement;
    const qr = root.querySelector('[data-hm-qr]') as HTMLElement;
    const phone = root.querySelector('[data-hm-phone]') as HTMLElement;
    const idle = root.querySelector('[data-hm-idle]') as HTMLElement;
    const connected = root.querySelector('[data-hm-connected]') as HTMLElement;
    const terminal = root.querySelector('[data-hm-terminal]') as HTMLElement;
    const plns = root.querySelectorAll('[data-pln]');

    if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
      phone.classList.add('hm-glow');
      return;
    }

    let running = false;
    let animId: ReturnType<typeof setTimeout> | null = null;

    function wait(ms: number): Promise<void> {
      return new Promise(resolve => {
        animId = setTimeout(resolve, ms);
      });
    }

    function resetState() {
      desktop.classList.remove('hm-dim');
      qr.classList.remove('hm-show', 'hm-scanned');
      phone.classList.remove('hm-glow');
      idle.classList.remove('hm-hide');
      connected.classList.remove('hm-show');
      terminal.classList.remove('hm-show');
      plns.forEach(p => p.classList.remove('hm-visible'));
      root.style.opacity = '1';
    }

    async function startLoop() {
      while (running) {
        resetState();

        // Scene 1: desktop terminal with phone at low opacity (1.5s)
        await wait(1500);
        if (!running) break;

        // Scene 2: QR code scales in, desktop dims
        desktop.classList.add('hm-dim');
        qr.classList.add('hm-show');
        await wait(1500);
        if (!running) break;

        // Scene 3: phone glows, QR "scanned"
        phone.classList.add('hm-glow');
        qr.classList.add('hm-scanned');
        await wait(1000);
        if (!running) break;

        // Scene 4: QR disappears, phone shows connected
        qr.classList.remove('hm-show', 'hm-scanned');
        idle.classList.add('hm-hide');
        connected.classList.add('hm-show');
        await wait(1000);
        if (!running) break;

        // Scene 5: phone switches to terminal, lines appear
        connected.classList.remove('hm-show');
        terminal.classList.add('hm-show');
        desktop.classList.remove('hm-dim');

        for (let i = 0; i < plns.length; i++) {
          plns[i].classList.add('hm-visible');
          await wait(400);
          if (!running) break;
        }
        if (!running) break;

        // Hold
        await wait(2000);
        if (!running) break;

        // Fade out
        root.style.opacity = '0';
        root.style.transition = 'opacity 0.4s ease';
        await wait(400);
        if (!running) break;
        root.style.opacity = '1';
      }
    }

    const obs = new IntersectionObserver((entries) => {
      entries.forEach(e => {
        if (e.isIntersecting && !running) {
          running = true;
          startLoop();
        } else if (!e.isIntersecting && running) {
          running = false;
          if (animId) { clearTimeout(animId); animId = null; }
          resetState();
        }
      });
    }, { threshold: 0.3 });
    obs.observe(root);
  })();
</script>
