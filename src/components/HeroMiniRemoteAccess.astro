<script>
  (function() {
    const root = document.querySelector('[data-hm-ra]') as HTMLElement;
    if (!root) return;

    const desktop = root.querySelector('[data-hm-desktop]') as HTMLElement;
    const urlOverlay = root.querySelector('[data-hm-url]') as HTMLElement;
    const phone = root.querySelector('[data-hm-phone]') as HTMLElement;
    const idle = root.querySelector('[data-hm-idle]') as HTMLElement;
    const auth = root.querySelector('[data-hm-auth]') as HTMLElement;
    const connected = root.querySelector('[data-hm-connected]') as HTMLElement;
    const bigPhone = root.querySelector('[data-hm-big]') as HTMLElement;
    const blns = root.querySelectorAll('[data-bln]');

    if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) return;

    let running = false;
    let animId: ReturnType<typeof setTimeout> | null = null;

    function wait(ms: number): Promise<void> {
      return new Promise(resolve => { animId = setTimeout(resolve, ms); });
    }

    function resetState() {
      desktop.classList.remove('hm-dim', 'hm-hide');
      urlOverlay.classList.remove('hm-show');
      phone.classList.remove('hm-glow', 'hm-fade-out');
      idle.classList.remove('hm-hide');
      auth.classList.remove('hm-show');
      connected.classList.remove('hm-show');
      bigPhone.classList.remove('hm-show');
      blns.forEach(b => b.classList.remove('hm-visible'));
      root.style.opacity = '1';
      root.style.transition = '';
    }

    async function startLoop() {
      while (running) {
        resetState();

        // Scene 1: desktop terminal idle
        await wait(1500);
        if (!running) break;

        // Scene 2: URL overlay appears, desktop dims
        desktop.classList.add('hm-dim');
        urlOverlay.classList.add('hm-show');
        await wait(1500);
        if (!running) break;

        // Scene 3: phone glows, shows Google auth
        phone.classList.add('hm-glow');
        idle.classList.add('hm-hide');
        auth.classList.add('hm-show');
        await wait(1200);
        if (!running) break;

        // Scene 4: auth complete, show connected
        urlOverlay.classList.remove('hm-show');
        auth.classList.remove('hm-show');
        connected.classList.add('hm-show');
        await wait(1000);
        if (!running) break;

        // Scene 5: fade out small phone + desktop, reveal large phone
        desktop.classList.add('hm-hide');
        phone.classList.add('hm-fade-out');
        bigPhone.classList.add('hm-show');

        // Stagger terminal lines on the big phone
        await wait(400);
        if (!running) break;

        for (let i = 0; i < blns.length; i++) {
          blns[i].classList.add('hm-visible');
          await wait(250);
          if (!running) break;
        }
        if (!running) break;

        // Hold so the user can read the terminal
        await wait(3000);
        if (!running) break;

        // Fade out & loop
        root.style.transition = 'opacity 0.4s ease';
        root.style.opacity = '0';
        await wait(500);
        if (!running) break;
      }
    }

    const obs = new IntersectionObserver((entries) => {
      entries.forEach(e => {
        if (e.isIntersecting && !running) {
          running = true;
          startLoop();
        } else if (!e.isIntersecting && running) {
          running = false;
          if (animId) { clearTimeout(animId); animId = null; }
          resetState();
        }
      });
    }, { threshold: 0.3 });
    obs.observe(root);
  })();
</script>
