---
interface Props {
  showSectionNav?: boolean;
}
const { showSectionNav = false } = Astro.props;
const currentPath = Astro.url.pathname;
---

<nav class="navbar">
  <div class="navbar-inner container">
    <a href="/" class="navbar-brand">
      <span class="brand-icon">&#x276F;_</span>
      <span class="brand-text">PATAPIM</span>
    </a>

    <div class="navbar-links">
      <a href="/#secondary-features" class="nav-link">Features</a>
      <a href="/docs/getting-started/installation" class="nav-link">Docs</a>
      <a href="/pricing" class="nav-link">Pricing</a>
      <a href="/download" class="nav-link">Download</a>
    </div>

    <div class="navbar-actions">
      <a href="/api/auth/google" class="nav-signin" id="nav-signin" style="display:none;">Sign In</a>
      <a href="/go" class="btn btn-primary btn-nav">Dashboard</a>
    </div>

    <a href="/go" class="btn btn-primary btn-mobile-dash">Dashboard</a>
    <button class="mobile-toggle" aria-label="Toggle menu" id="mobile-toggle">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>

  <div class="mobile-menu" id="mobile-menu">
    <a href="/#secondary-features">Features</a>
    <a href="/docs/getting-started/installation">Docs</a>
    <a href="/pricing">Pricing</a>
    <a href="/download">Download</a>
    <a href="/api/auth/google" class="mobile-signin" id="mobile-signin" style="display:none;">Sign In</a>
    <a href="/go" class="btn btn-primary" style="margin-top: 8px; justify-content: center;">Dashboard</a>
  </div>

  {showSectionNav && (
    <div class="section-nav" id="section-nav">
      <div class="section-nav-inner container">
        <a href="#secondary-features" class="section-pill" data-section="secondary-features">Features</a>
        <a href="#more-features" class="section-pill" data-section="more-features">More</a>
        <a href="#pricing" class="section-pill" data-section="pricing">Pricing</a>
      </div>
    </div>
  )}
</nav>

<style>
  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: rgba(15, 15, 16, 0.85);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    border-bottom: 1px solid var(--border-subtle);
  }

  .navbar-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 64px;
  }

  .navbar-brand {
    display: flex;
    align-items: center;
    gap: 10px;
    text-decoration: none;
    color: var(--text-primary);
    font-weight: 600;
    font-size: 18px;
  }

  .brand-icon {
    font-family: var(--font-mono);
    color: var(--accent-primary);
    font-size: 16px;
    background: var(--accent-subtle);
    padding: 4px 8px;
    border-radius: var(--radius-sm);
  }

  .navbar-links {
    display: flex;
    align-items: center;
    gap: 32px;
  }

  .nav-link {
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
    transition: color var(--transition-fast);
  }
  .nav-link:hover {
    color: var(--text-primary);
  }

  .btn-nav {
    padding: 8px 20px;
    font-size: 14px;
  }

  .mobile-toggle {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 4px;
  }
  .mobile-toggle span {
    display: block;
    width: 22px;
    height: 2px;
    background: var(--text-secondary);
    border-radius: 2px;
    transition: all var(--transition-fast);
  }

  .mobile-menu {
    display: none;
    flex-direction: column;
    padding: 16px 24px 24px;
    background: var(--bg-primary);
    border-bottom: 1px solid var(--border-default);
  }
  .mobile-menu a {
    display: flex;
    padding: 12px 0;
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 15px;
    border-bottom: 1px solid var(--border-subtle);
  }
  .mobile-menu a:last-child {
    border: none;
  }

  .navbar-actions {
    display: flex;
    align-items: center;
    gap: var(--space-lg);
  }

  .nav-signin {
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
    transition: color var(--transition-fast);
  }
  .nav-signin:hover {
    color: var(--text-primary);
  }

  .mobile-signin {
    color: var(--text-secondary) !important;
  }

  /* Section Nav Strip */
  .section-nav {
    background: rgba(15, 15, 16, 0.9);
    border-top: 1px solid var(--border-subtle);
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
  }
  .section-nav::-webkit-scrollbar { display: none; }

  .section-nav-inner {
    display: flex;
    align-items: center;
    gap: 6px;
    height: 40px;
    white-space: nowrap;
  }

  .section-pill {
    font-family: var(--font-mono);
    font-size: 12px;
    color: var(--text-tertiary);
    text-decoration: none;
    padding: 5px 14px;
    border-radius: 100px;
    transition: all var(--transition-fast);
    flex-shrink: 0;
  }
  .section-pill:hover {
    color: var(--text-secondary);
    background: var(--bg-tertiary);
  }
  .section-pill.active {
    color: var(--accent-primary);
    background: var(--accent-subtle);
  }

  .btn-mobile-dash {
    display: none;
  }

  @media (max-width: 768px) {
    .navbar-links, .navbar-actions { display: none; }
    .mobile-toggle { display: flex; }
    .btn-mobile-dash {
      display: inline-flex;
      padding: 6px 14px;
      font-size: 12px;
    }
    .mobile-menu.open { display: flex; }

    .section-nav-inner {
      padding: 0 var(--space-lg);
    }
  }
</style>

<script>
  // Mobile menu toggle
  const toggle = document.getElementById('mobile-toggle');
  const menu = document.getElementById('mobile-menu');
  toggle?.addEventListener('click', () => {
    menu?.classList.toggle('open');
  });

  // Auth state check
  (async () => {
    try {
      const res = await fetch('/api/auth/session');
      const data = await res.json();
      if (!data.authenticated) {
        document.getElementById('nav-signin')?.style.setProperty('display', '');
        document.getElementById('mobile-signin')?.style.setProperty('display', '');
      }
    } catch {
      document.getElementById('nav-signin')?.style.setProperty('display', '');
      document.getElementById('mobile-signin')?.style.setProperty('display', '');
    }
  })();

  // Section nav IntersectionObserver
  const sectionNav = document.getElementById('section-nav');
  if (sectionNav) {
    const pills = sectionNav.querySelectorAll('.section-pill');
    const sectionIds = Array.from(pills).map(p => (p as HTMLAnchorElement).dataset.section!);
    const sections = sectionIds.map(id => document.getElementById(id)).filter(Boolean) as HTMLElement[];

    let currentActive = '';

    const observer = new IntersectionObserver((entries) => {
      // Find the topmost visible section
      let topSection = '';
      let topY = Infinity;
      sections.forEach(section => {
        const rect = section.getBoundingClientRect();
        // Consider a section "in view" if its top is within the viewport
        if (rect.top < window.innerHeight * 0.5 && rect.bottom > 120) {
          if (rect.top < topY) {
            topY = rect.top;
            topSection = section.id;
          }
        }
      });

      if (topSection && topSection !== currentActive) {
        currentActive = topSection;
        pills.forEach(pill => {
          const p = pill as HTMLAnchorElement;
          if (p.dataset.section === topSection) {
            p.classList.add('active');
          } else {
            p.classList.remove('active');
          }
        });
      }
    }, {
      threshold: 0,
      rootMargin: '-120px 0px -50% 0px'
    });

    sections.forEach(section => observer.observe(section));

    // Also update on scroll for more accurate tracking
    let scrollTick = false;
    window.addEventListener('scroll', () => {
      if (!scrollTick) {
        scrollTick = true;
        requestAnimationFrame(() => {
          let topSection = '';
          let topY = Infinity;
          sections.forEach(section => {
            const rect = section.getBoundingClientRect();
            if (rect.top < window.innerHeight * 0.5 && rect.bottom > 120) {
              if (rect.top < topY) {
                topY = rect.top;
                topSection = section.id;
              }
            }
          });
          if (topSection && topSection !== currentActive) {
            currentActive = topSection;
            pills.forEach(pill => {
              const p = pill as HTMLAnchorElement;
              if (p.dataset.section === topSection) {
                p.classList.add('active');
              } else {
                p.classList.remove('active');
              }
            });
          }
          scrollTick = false;
        });
      }
    }, { passive: true });
  }
</script>
