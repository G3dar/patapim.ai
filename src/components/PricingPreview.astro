---
const free = [
  'Up to 9 terminals',
  'Up to 3 projects',
  '60 min dictation / week',
  'Remote access from LAN',
  'File editor',
  'Context preservation',
  'Session persistence',
  'Auto-updates',
];

const pro = [
  'Unlimited terminals',
  'Unlimited projects',
  'Unlimited dictation',
  'Remote access from anywhere (URL)',
  'Cloudflare Tunnels',
  'PassKey authentication',
  'Task management panel',
  'GitHub issues panel',
  'Plugin marketplace',
  'Priority support',
];
---

<section class="section pricing-section" id="pricing">
  <div class="container">
    <div class="section-header">
      <span class="section-label">Pricing</span>
      <h2 class="section-title">Start Free. Upgrade When You're Ready.</h2>
      <p class="section-subtitle">
        14-day Pro trial &mdash; no credit card required.
      </p>
    </div>

    <div class="pricing-grid">
      <div class="pricing-card">
        <div class="pricing-header">
          <h3>Free</h3>
          <div class="pricing-price">
            <span class="price-amount">$0</span>
            <span class="price-period">forever</span>
          </div>
          <p class="pricing-desc">Everything you need to get started.</p>
        </div>
        <ul class="pricing-features">
          {free.map((f) => (
            <li><span class="check">&#x2714;</span> {f}</li>
          ))}
        </ul>
        <a href="/download" class="btn btn-secondary" style="width: 100%; justify-content: center;">
          Download Free
        </a>
      </div>

      <div class="pricing-card pro">
        <div class="pro-badge">Most Popular</div>
        <div class="pricing-header">
          <h3>Pro</h3>
          <div class="pricing-price">
            <span class="price-amount">$6.99</span>
            <span class="price-period">/month</span>
          </div>
          <p class="pricing-desc">Full power, no limits.</p>
        </div>
        <ul class="pricing-features">
          {pro.map((f) => (
            <li><span class="check">&#x2714;</span> {f}</li>
          ))}
        </ul>
        <a href="/pricing" class="btn btn-primary" style="width: 100%; justify-content: center;">
          Start 14-Day Free Trial
        </a>
      </div>
    </div>

    <div class="unlock-banner">
      <div class="unlock-inner">
        <div class="unlock-content">
          <span class="unlock-badge">Limited Time</span>
          <h3 class="unlock-title">Unlock Forever</h3>
          <p class="unlock-desc">One-time payment. Pro features for life. No subscriptions, no renewals.</p>
        </div>
        <div class="unlock-price-area">
          <span class="unlock-price">$29.99</span>
          <span class="unlock-once">one-time</span>
        </div>
        <a href="/pricing" class="btn btn-primary">Get Lifetime Access</a>
      </div>
    </div>
  </div>
</section>

<style>
  .pricing-section {
    background: var(--bg-deep);
    scroll-margin-top: 120px;
  }

  .pricing-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-xl);
    max-width: 800px;
    margin: 0 auto;
  }

  .pricing-card {
    background: var(--bg-secondary);
    border: 1px solid var(--border-default);
    border-radius: var(--radius-xl);
    padding: var(--space-2xl);
    display: flex;
    flex-direction: column;
    position: relative;
  }

  .pricing-card.pro {
    border-color: var(--accent-primary);
    box-shadow: 0 0 40px rgba(212, 165, 116, 0.1);
  }

  .pro-badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--accent-primary);
    color: var(--bg-deep);
    font-size: 12px;
    font-weight: 600;
    padding: 4px 16px;
    border-radius: 100px;
    white-space: nowrap;
  }

  .pricing-header {
    margin-bottom: var(--space-xl);
  }

  .pricing-header h3 {
    font-size: 20px;
    font-weight: 600;
    margin-bottom: var(--space-sm);
  }

  .pricing-price {
    display: flex;
    align-items: baseline;
    gap: 4px;
    margin-bottom: var(--space-sm);
  }
  .price-amount {
    font-size: 42px;
    font-weight: 700;
    color: var(--text-primary);
    font-family: var(--font-mono);
  }
  .price-period {
    font-size: 15px;
    color: var(--text-tertiary);
  }

  .pricing-desc {
    font-size: 14px;
    color: var(--text-tertiary);
  }

  .pricing-features {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
    margin-bottom: var(--space-xl);
    flex: 1;
  }
  .pricing-features li {
    display: flex;
    align-items: flex-start;
    gap: 8px;
    font-size: 14px;
    color: var(--text-secondary);
    line-height: 1.5;
  }
  .pricing-features .check {
    color: var(--success);
    flex-shrink: 0;
    margin-top: 1px;
  }

  /* Unlock Forever Banner */
  .unlock-banner {
    max-width: 800px;
    margin: var(--space-xl) auto 0;
  }

  .unlock-inner {
    display: flex;
    align-items: center;
    gap: var(--space-2xl);
    background: var(--bg-secondary);
    border: 1px solid var(--border-strong);
    border-radius: var(--radius-xl);
    padding: var(--space-2xl);
  }

  .unlock-content {
    flex: 1;
  }

  .unlock-badge {
    display: inline-block;
    font-family: var(--font-mono);
    font-size: 11px;
    color: var(--warning);
    background: rgba(224, 164, 88, 0.12);
    padding: 3px 10px;
    border-radius: 100px;
    margin-bottom: var(--space-sm);
  }

  .unlock-title {
    font-size: 20px;
    font-weight: 600;
    margin-bottom: var(--space-xs);
  }

  .unlock-desc {
    font-size: 14px;
    color: var(--text-secondary);
    line-height: 1.5;
  }

  .unlock-price-area {
    text-align: center;
    flex-shrink: 0;
  }

  .unlock-price {
    display: block;
    font-size: 36px;
    font-weight: 700;
    font-family: var(--font-mono);
    color: var(--text-primary);
  }

  .unlock-once {
    display: block;
    font-size: 13px;
    color: var(--text-tertiary);
    margin-top: 2px;
  }

  @media (max-width: 640px) {
    .pricing-grid {
      grid-template-columns: 1fr;
    }
    .unlock-inner {
      flex-direction: column;
      text-align: center;
      gap: var(--space-lg);
    }
  }
</style>
