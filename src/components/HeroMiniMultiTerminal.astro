</div>

<style>
  .hm-mt {
    width: 280px;
    border-radius: 8px;
    overflow: hidden;
    border: 1px solid var(--border-strong);
    background: var(--bg-deep);
    box-shadow: 0 8px 32px rgba(0,0,0,0.4);
  }
  .hm-chrome {
    background: var(--bg-tertiary);
    padding: 6px 10px;
    display: flex;
    align-items: center;
    gap: 8px;
    border-bottom: 1px solid var(--border-default);
  }
  .hm-dots { display: flex; gap: 4px; }
  .hm-dot { width: 6px; height: 6px; border-radius: 50%; }
  .hm-dot-r { background: #ff5f57; }
  .hm-dot-y { background: #febc2e; }
  .hm-dot-g { background: #28c840; }
  .hm-chrome-icon { color: var(--text-muted); }
  .hm-title {
    font-family: var(--font-mono);
    font-size: 9px;
    color: var(--text-tertiary);
  }
  .hm-body {
    background: var(--bg-deep);
    padding: 10px 12px;
    height: 146px;
    font-family: var(--font-mono);
    font-size: 9px;
    line-height: 1.6;
    color: var(--text-secondary);
    position: relative;
    overflow: hidden;
  }
  .hm-pr { color: var(--accent-primary); margin-right: 4px; }
  .hm-dim { opacity: 0.5; }
  .hm-ln { white-space: nowrap; }
  .hm-cursor-line { white-space: nowrap; }
  .hm-blink {
    color: var(--accent-primary);
    animation: hm-blink 1s step-end infinite;
  }
  @keyframes hm-blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }

  .hm-single {
    opacity: 1;
    transition: opacity 0.4s ease;
  }
  .hm-single.hm-hide { opacity: 0; pointer-events: none; }

  .hm-grid {
    position: absolute;
    inset: 10px 12px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr 1fr;
    gap: 4px;
    opacity: 0;
    transition: opacity 0.5s ease;
  }
  .hm-grid.hm-show { opacity: 1; }
  .hm-grid.hm-resize {
    grid-template-columns: 58fr 42fr;
    transition: opacity 0.5s ease, grid-template-columns 1.5s ease;
  }

  .hm-cell {
    border: 1px solid var(--border-default);
    border-radius: 3px;
    overflow: hidden;
    background: rgba(255,255,255,0.02);
  }
  .hm-cell-bar {
    display: flex;
    align-items: center;
    gap: 4px;
    padding: 2px 5px;
    font-size: 7px;
    color: var(--text-muted);
    border-bottom: 1px solid var(--border-default);
    background: rgba(255,255,255,0.02);
  }
  .hm-cell-dot {
    width: 4px;
    height: 4px;
    border-radius: 50%;
    flex-shrink: 0;
  }
  .hm-cell-body {
    padding: 3px 5px;
    font-size: 7px;
    line-height: 1.5;
    color: var(--text-muted);
    overflow: hidden;
  }
  .hm-cell-body .hm-cell-line {
    opacity: 0;
    white-space: nowrap;
    transition: opacity 0.3s ease;
  }
  .hm-cell-body .hm-cell-line.hm-visible { opacity: 1; }

  @media (max-width: 768px) {
    .hm-mt { width: 100%; max-width: 320px; }
  }

  @media (prefers-reduced-motion: reduce) {
    .hm-blink { animation: none; opacity: 1; }
    .hm-single { opacity: 0; }
    .hm-grid { opacity: 1; }
    .hm-cell-body .hm-cell-line { opacity: 1; }
  }
</style>

<script>
  (function() {
    const root = document.querySelector('[data-hm-mt]') as HTMLElement;
    if (!root) return;

    const single = root.querySelector('[data-hm-single]') as HTMLElement;
    const grid = root.querySelector('[data-hm-grid]') as HTMLElement;
    const cells = root.querySelectorAll('[data-cell]');

    if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
      single.classList.add('hm-hide');
      grid.classList.add('hm-show');
      const lines = [
        ['GET /api 200', 'GET /home 200'],
        ['PASS 8 tests', '✓ All green'],
        ['Built 2.1s', '✓ No errors'],
        ['✓ Optimized', 'Saved 3 files']
      ];
      cells.forEach((c, i) => {
        lines[i].forEach(t => {
          const el = document.createElement('div');
          el.className = 'hm-cell-line hm-visible';
          el.textContent = t;
          c.appendChild(el);
        });
      });
      return;
    }

    let running = false;
    let animId: ReturnType<typeof setTimeout> | null = null;

    function wait(ms: number): Promise<void> {
      return new Promise(resolve => {
        animId = setTimeout(resolve, ms);
      });
    }

    const cellLines = [
      ['GET /api 200', 'GET /home 200', 'POST /login 201'],
      ['PASS 8 tests', '✓ All green', 'PASS utils'],
      ['Built 2.1s', '✓ No errors', 'Bundled 48kb'],
      ['✓ Optimized', 'Saved 3 files', '↻ Watching...']
    ];

    function resetState() {
      single.classList.remove('hm-hide');
      grid.classList.remove('hm-show', 'hm-resize');
      cells.forEach(c => { (c as HTMLElement).innerHTML = ''; });
    }

    async function startLoop() {
      while (running) {
        resetState();

        // Scene 1: single terminal visible (1s)
        await wait(1000);
        if (!running) break;

        // Scene 2: fade to grid (0.5s transition + 1s hold)
        single.classList.add('hm-hide');
        await wait(400);
        if (!running) break;
        grid.classList.add('hm-show');
        await wait(1100);
        if (!running) break;

        // Scene 3: stagger lines into cells
        for (let lineIdx = 0; lineIdx < 3; lineIdx++) {
          for (let cellIdx = 0; cellIdx < 4; cellIdx++) {
            const el = document.createElement('div');
            el.className = 'hm-cell-line';
            el.textContent = cellLines[cellIdx][lineIdx];
            cells[cellIdx].appendChild(el);
            setTimeout(() => el.classList.add('hm-visible'), 50);
          }
          await wait(600);
          if (!running) break;
        }
        if (!running) break;

        // Scene 4: subtle resize
        grid.classList.add('hm-resize');
        await wait(2000);
        if (!running) break;

        // Scene 5: hold then fade
        await wait(1000);
        if (!running) break;

        grid.classList.remove('hm-show');
        await wait(500);
      }
    }

    const obs = new IntersectionObserver((entries) => {
      entries.forEach(e => {
        if (e.isIntersecting && !running) {
          running = true;
          startLoop();
        } else if (!e.isIntersecting && running) {
          running = false;
          if (animId) { clearTimeout(animId); animId = null; }
          resetState();
        }
      });
    }, { threshold: 0.3 });
    obs.observe(root);
  })();
</script>
