<script>
  // Typing animation for the command
  const cmd = document.getElementById('typed-cmd');
  const cursor = document.getElementById('cursor');
  const text = 'claude';
  let i = 0;

  function typeChar() {
    if (!cmd) return;
    if (i < text.length) {
      cmd.textContent += text.charAt(i);
      i++;
      setTimeout(typeChar, 80 + Math.random() * 60);
    } else {
      if (cursor) cursor.style.display = 'none';
    }
  }

  setTimeout(typeChar, 800);
</script>
