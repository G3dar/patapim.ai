---
import HeroMiniMultiTerminal from './HeroMiniMultiTerminal.astro';
import HeroMiniVoiceDictation from './HeroMiniVoiceDictation.astro';
import HeroMiniRemoteAccess from './HeroMiniRemoteAccess.astro';
---

<section class="hero">
  <div class="hero-bg-grid"></div>
  <div class="container hero-inner">
    <div class="hero-badge">
      <span class="badge-dot"></span>
      Built for Claude Code, Codex &amp; Gemini
    </div>

    <h1 class="hero-title">
      Your Terminal.<br />
      <span class="hero-accent">Supercharged</span> for AI Development.
    </h1>

    <p class="hero-subtitle">
      Multi-terminal sessions, voice dictation, and remote access
      for Claude Code, Codex, and Gemini.
    </p>

    <div class="hero-install">
      <div class="hero-install-tabs">
        <button class="hi-tab active" data-hero-tab="cmd">CMD</button>
        <button class="hi-tab" data-hero-tab="ps">PowerShell</button>
      </div>
      <div class="hero-install-panels">
        <div class="hi-panel active" data-hero-panel="cmd">
          <div class="hi-line" data-hero-copy='curl -fsSL https://raw.githubusercontent.com/G3dar/patapim-releases/main/install.cmd -o "%TEMP%\patapim-install.cmd" && "%TEMP%\patapim-install.cmd"'>
            <span class="hi-prompt">C:\&gt;</span>
            <code>curl -fsSL https://raw.githubusercontent.com/G3dar/patapim-releases/main/install.cmd -o "%TEMP%\patapim-install.cmd" &amp;&amp; "%TEMP%\patapim-install.cmd"</code>
            <button class="hi-copy-btn" aria-label="Copy to clipboard">
              <svg class="hi-copy-icon" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="9" y="9" width="13" height="13" rx="2"/><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/></svg>
              <svg class="hi-check-icon" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
            </button>
          </div>
        </div>
        <div class="hi-panel" data-hero-panel="ps">
          <div class="hi-line" data-hero-copy="irm https://raw.githubusercontent.com/G3dar/patapim-releases/main/install.ps1 | iex">
            <span class="hi-prompt">PS&gt;</span>
            <code>irm https://raw.githubusercontent.com/G3dar/patapim-releases/main/install.ps1 | iex</code>
            <button class="hi-copy-btn" aria-label="Copy to clipboard">
              <svg class="hi-copy-icon" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="9" y="9" width="13" height="13" rx="2"/><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/></svg>
              <svg class="hi-check-icon" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
            </button>
          </div>
        </div>
      </div>
      <div class="hero-install-meta">
        <span>Windows 10+</span>
        <span class="meta-dot">&#x2022;</span>
        <span>macOS coming soon</span>
        <span class="meta-dot">&#x2022;</span>
        <a href="/download" class="meta-link">Download page</a>
      </div>
    </div>

    <div class="hero-features">
      <div class="hero-feature-item">
        <HeroMiniMultiTerminal />
        <span class="hf-label">Multi-Terminal</span>
      </div>
      <div class="hero-feature-item">
        <HeroMiniVoiceDictation />
        <span class="hf-label">Voice Dictation</span>
      </div>
      <div class="hero-feature-item">
        <HeroMiniRemoteAccess />
        <span class="hf-label">Remote Access</span>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    padding: 140px 0 80px;
    overflow: hidden;
    min-height: 90vh;
    display: flex;
    align-items: center;
  }

  .hero-bg-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(212, 165, 116, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(212, 165, 116, 0.03) 1px, transparent 1px);
    background-size: 60px 60px;
    mask-image: radial-gradient(ellipse 60% 50% at 50% 40%, black, transparent);
    -webkit-mask-image: radial-gradient(ellipse 60% 50% at 50% 40%, black, transparent);
  }

  .hero-inner {
    position: relative;
    text-align: center;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-family: var(--font-mono);
    font-size: 13px;
    color: var(--accent-primary);
    background: var(--accent-subtle);
    padding: 8px 18px;
    border-radius: 100px;
    margin-bottom: var(--space-2xl);
    border: 1px solid rgba(212, 165, 116, 0.2);
  }

  .badge-dot {
    width: 6px;
    height: 6px;
    background: var(--accent-primary);
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.4; }
  }

  .hero-title {
    font-size: clamp(36px, 6vw, 72px);
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: var(--space-xl);
    letter-spacing: -1px;
  }

  .hero-accent {
    background: linear-gradient(135deg, var(--accent-primary), #e8c29e);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: clamp(16px, 2vw, 19px);
    color: var(--text-secondary);
    max-width: 680px;
    margin: 0 auto var(--space-2xl);
    line-height: 1.7;
  }

  /* Install command block */
  .hero-install {
    max-width: 680px;
    margin: 0 auto var(--space-2xl);
  }

  .hero-install-tabs {
    display: flex;
    gap: 2px;
    justify-content: center;
    margin-bottom: 0;
  }

  .hi-tab {
    font-family: var(--font-mono);
    font-size: 12px;
    color: var(--text-muted);
    background: var(--bg-tertiary);
    border: 1px solid var(--border-default);
    border-bottom: none;
    padding: 6px 18px;
    border-radius: 6px 6px 0 0;
    cursor: pointer;
    transition: all var(--transition-fast);
  }
  .hi-tab:hover {
    color: var(--text-secondary);
  }
  .hi-tab.active {
    color: var(--text-primary);
    background: var(--bg-deep);
    border-color: var(--border-strong);
  }

  .hero-install-panels {
    background: var(--bg-deep);
    border: 1px solid var(--border-strong);
    border-radius: 10px;
    border-top-left-radius: 0;
    border-top-right-radius: 0;
    overflow: hidden;
  }

  .hi-panel {
    display: none;
  }
  .hi-panel.active {
    display: block;
  }

  .hi-line {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 14px 18px;
    font-family: var(--font-mono);
    font-size: 13px;
    color: var(--text-secondary);
    cursor: pointer;
    transition: border-color 0.3s ease;
    word-break: break-all;
    line-height: 1.6;
  }
  .hi-line:hover {
    background: rgba(212, 165, 116, 0.03);
  }
  .hi-line.copied {
    border-color: var(--success);
    box-shadow: inset 0 0 0 1px var(--success);
  }

  .hi-prompt {
    color: var(--accent-primary);
    flex-shrink: 0;
    font-weight: 500;
  }

  .hi-line code {
    flex: 1;
    min-width: 0;
    color: var(--text-secondary);
  }

  .hi-copy-btn {
    flex-shrink: 0;
    background: var(--bg-tertiary);
    border: 1px solid var(--border-default);
    border-radius: 4px;
    padding: 5px;
    cursor: pointer;
    color: var(--text-muted);
    transition: all var(--transition-fast);
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .hi-copy-btn:hover {
    color: var(--accent-primary);
    border-color: var(--accent-primary);
  }

  .hi-check-icon {
    display: none;
  }
  .hi-copy-btn.copied .hi-copy-icon {
    display: none;
  }
  .hi-copy-btn.copied .hi-check-icon {
    display: block;
  }
  .hi-copy-btn.copied {
    color: var(--success);
    border-color: var(--success);
  }

  .hero-install-meta {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    margin-top: 12px;
    font-size: 13px;
    color: var(--text-muted);
  }
  .meta-dot {
    font-size: 8px;
  }
  .meta-link {
    color: var(--accent-primary);
    text-decoration: none;
    transition: opacity var(--transition-fast);
  }
  .meta-link:hover {
    opacity: 0.8;
    text-decoration: underline;
  }

  /* Feature mini demos */
  .hero-features {
    display: flex;
    align-items: flex-start;
    justify-content: center;
    gap: var(--space-2xl);
  }

  .hero-feature-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
  }

  .hf-label {
    font-family: var(--font-mono);
    font-size: 12px;
    color: var(--text-tertiary);
    letter-spacing: 0.02em;
  }

  @media (max-width: 768px) {
    .hero { padding: 120px 0 60px; min-height: auto; }
    .hero-features { flex-direction: column; align-items: center; gap: var(--space-xl); }
    .hero-install { max-width: 100%; }
    .hi-line { font-size: 11px; padding: 12px 14px; }
    .hi-tab { font-size: 11px; padding: 5px 14px; }
    .hf-label { font-size: 11px; }
  }

  @media (max-width: 480px) {
    .hi-line { font-size: 10px; padding: 10px 12px; }
    .hi-prompt { display: none; }
  }
</style>

<script>
  // Install tabs
  const heroTabs = document.querySelectorAll('[data-hero-tab]');
  const heroPanels = document.querySelectorAll('[data-hero-panel]');
  heroTabs.forEach(tab => {
    tab.addEventListener('click', () => {
      const target = (tab as HTMLElement).dataset.heroTab;
      heroTabs.forEach(t => t.classList.remove('active'));
      heroPanels.forEach(p => p.classList.remove('active'));
      tab.classList.add('active');
      document.querySelector(`[data-hero-panel="${target}"]`)?.classList.add('active');
    });
  });

  // Copy to clipboard
  function heroCopyText(text: string): Promise<void> {
    if (navigator.clipboard?.writeText) {
      return navigator.clipboard.writeText(text);
    }
    const ta = document.createElement('textarea');
    ta.value = text;
    ta.style.position = 'fixed';
    ta.style.opacity = '0';
    document.body.appendChild(ta);
    ta.select();
    document.execCommand('copy');
    document.body.removeChild(ta);
    return Promise.resolve();
  }

  // Click on entire line or copy button to copy
  document.querySelectorAll('.hi-line[data-hero-copy]').forEach(line => {
    const handleCopy = (e: Event) => {
      e.preventDefault();
      e.stopPropagation();
      const el = line as HTMLElement;
      const text = el.dataset.heroCopy;
      const btn = el.querySelector('.hi-copy-btn');
      if (text) {
        heroCopyText(text).then(() => {
          el.classList.add('copied');
          btn?.classList.add('copied');
          setTimeout(() => {
            el.classList.remove('copied');
            btn?.classList.remove('copied');
          }, 1500);
        }).catch(() => {
          el.classList.add('copied');
          btn?.classList.add('copied');
          setTimeout(() => {
            el.classList.remove('copied');
            btn?.classList.remove('copied');
          }, 1500);
        });
      }
    };

    line.addEventListener('click', handleCopy);
  });
</script>
