<style>
  .hm-vd {
    width: 340px;
    border-radius: 8px;
    overflow: hidden;
    border: 1px solid var(--border-strong);
    background: var(--bg-deep);
    box-shadow: 0 8px 32px rgba(0,0,0,0.4);
  }
  .hm-chrome {
    background: var(--bg-tertiary);
    padding: 5px 10px;
    display: flex;
    align-items: center;
    gap: 8px;
    border-bottom: 1px solid var(--border-default);
  }
  .hm-dots { display: flex; gap: 4px; }
  .hm-dot { width: 6px; height: 6px; border-radius: 50%; }
  .hm-dot-r { background: #ff5f57; }
  .hm-dot-y { background: #febc2e; }
  .hm-dot-g { background: #28c840; }
  .hm-title {
    font-family: var(--font-mono);
    font-size: 8px;
    color: var(--text-tertiary);
  }

  .hm-body {
    height: 180px;
    position: relative;
    overflow: hidden;
    font-family: var(--font-mono);
  }

  /* Mic scene — centered */
  .hm-mic-scene {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 10px;
    transition: opacity 0.4s ease;
  }
  .hm-mic-scene.hm-hide { opacity: 0; pointer-events: none; }

  .hm-mic-ring {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid var(--border-default);
    transition: all 0.4s ease;
  }
  .hm-mic-ring.hm-active {
    border-color: var(--warning);
    box-shadow: 0 0 0 6px rgba(224,164,88,0.15), 0 0 20px rgba(224,164,88,0.3);
  }
  .hm-mic-btn {
    width: 42px;
    height: 42px;
    border-radius: 50%;
    background: var(--bg-tertiary);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-muted);
    transition: all 0.3s ease;
  }
  .hm-mic-ring.hm-active .hm-mic-btn {
    background: var(--warning);
    color: #fff;
    box-shadow: 0 0 12px rgba(224,164,88,0.5);
  }

  .hm-wave-row {
    display: flex;
    align-items: center;
    gap: 3px;
    height: 32px;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  .hm-wave-row.hm-show { opacity: 1; }

  .hm-bar {
    width: 4px;
    height: 4px;
    background: var(--warning);
    border-radius: 2px;
  }
  .hm-wave-row.hm-show .hm-bar {
    animation: hm-wave-vd 0.5s ease-in-out infinite alternate;
  }
  .hm-wave-row.hm-show .hm-bar:nth-child(1) { animation-delay: 0s; }
  .hm-wave-row.hm-show .hm-bar:nth-child(2) { animation-delay: 0.08s; }
  .hm-wave-row.hm-show .hm-bar:nth-child(3) { animation-delay: 0.16s; }
  .hm-wave-row.hm-show .hm-bar:nth-child(4) { animation-delay: 0.24s; }
  .hm-wave-row.hm-show .hm-bar:nth-child(5) { animation-delay: 0.12s; }
  .hm-wave-row.hm-show .hm-bar:nth-child(6) { animation-delay: 0.2s; }
  .hm-wave-row.hm-show .hm-bar:nth-child(7) { animation-delay: 0.06s; }
  .hm-wave-row.hm-show .hm-bar:nth-child(8) { animation-delay: 0.18s; }
  .hm-wave-row.hm-show .hm-bar:nth-child(9) { animation-delay: 0.1s; }

  @keyframes hm-wave-vd {
    0% { height: 4px; }
    100% { height: 28px; }
  }

  .hm-mic-label {
    font-size: 7px;
    color: var(--text-muted);
    transition: opacity 0.3s ease;
  }
  .hm-mic-label.hm-hide { opacity: 0; }

  /* Output scene */
  .hm-output-scene {
    position: absolute;
    inset: 0;
    padding: 12px 14px;
    opacity: 0;
    transition: opacity 0.4s ease;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .hm-output-scene.hm-show { opacity: 1; }

  .hm-oln {
    font-size: 9px;
    line-height: 1.8;
    color: var(--text-secondary);
    white-space: nowrap;
  }
  .hm-pr { color: var(--accent-primary); margin-right: 4px; }
  .hm-typed { color: var(--text-primary); }
  .hm-cursor {
    color: var(--accent-primary);
    animation: hm-blink-vd 1s step-end infinite;
  }
  @keyframes hm-blink-vd {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }
  .hm-response {
    color: var(--success);
    opacity: 0;
    transition: opacity 0.4s ease;
  }
  .hm-response.hm-show { opacity: 1; }

  @media (max-width: 768px) {
    .hm-vd { width: 100%; max-width: 340px; }
  }

  @media (prefers-reduced-motion: reduce) {
    .hm-bar { animation: none !important; height: 10px; }
    .hm-cursor { animation: none; opacity: 1; }
    .hm-mic-scene { opacity: 0; }
    .hm-output-scene { opacity: 1; }
    .hm-response { opacity: 1; }
  }
</style>

<script>
  (function() {
    const root = document.querySelector('[data-hm-vd]') as HTMLElement;
    if (!root) return;

    const micScene = root.querySelector('[data-hm-mic-scene]') as HTMLElement;
    const ring = root.querySelector('[data-hm-ring]') as HTMLElement;
    const wave = root.querySelector('[data-hm-wave]') as HTMLElement;
    const micLabel = root.querySelector('[data-hm-mic-label]') as HTMLElement;
    const outputScene = root.querySelector('[data-hm-output]') as HTMLElement;
    const typed = root.querySelector('[data-hm-typed]') as HTMLElement;
    const cursor = root.querySelector('[data-hm-cursor]') as HTMLElement;
    const response = root.querySelector('[data-hm-response]') as HTMLElement;

    if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
      typed.textContent = 'fix the login bug';
      response.textContent = '✓ Fixed login validation';
      response.classList.add('hm-show');
      cursor.style.display = 'none';
      return;
    }

    let running = false;
    let animId: ReturnType<typeof setTimeout> | null = null;

    function wait(ms: number): Promise<void> {
      return new Promise(resolve => { animId = setTimeout(resolve, ms); });
    }

    function resetState() {
      micScene.classList.remove('hm-hide');
      ring.classList.remove('hm-active');
      wave.classList.remove('hm-show');
      micLabel.classList.remove('hm-hide');
      outputScene.classList.remove('hm-show');
      typed.textContent = '';
      response.textContent = '';
      response.classList.remove('hm-show');
      cursor.style.display = '';
      root.style.opacity = '1';
    }

    async function typeText(text: string) {
      for (let i = 0; i < text.length; i++) {
        if (!running) return;
        typed.textContent += text[i];
        await wait(50 + Math.random() * 25);
      }
    }

    async function startLoop() {
      while (running) {
        resetState();

        // Scene 1: idle mic (1s)
        await wait(1000);
        if (!running) break;

        // Scene 2: mic activates, waveform appears
        ring.classList.add('hm-active');
        micLabel.classList.add('hm-hide');
        await wait(400);
        if (!running) break;
        wave.classList.add('hm-show');
        await wait(1500);
        if (!running) break;

        // Scene 3: transition to output, type text
        wave.classList.remove('hm-show');
        micScene.classList.add('hm-hide');
        outputScene.classList.add('hm-show');
        await wait(300);
        if (!running) break;

        await typeText('fix the login bug');
        if (!running) break;
        await wait(300);
        if (!running) break;

        // Scene 4: response
        cursor.style.display = 'none';
        response.textContent = '✓ Fixed login validation';
        response.classList.add('hm-show');
        await wait(2500);
        if (!running) break;

        // Fade & loop
        root.style.opacity = '0';
        root.style.transition = 'opacity 0.4s ease';
        await wait(400);
        if (!running) break;
        root.style.opacity = '1';
      }
    }

    const obs = new IntersectionObserver((entries) => {
      entries.forEach(e => {
        if (e.isIntersecting && !running) {
          running = true;
          startLoop();
        } else if (!e.isIntersecting && running) {
          running = false;
          if (animId) { clearTimeout(animId); animId = null; }
          resetState();
        }
      });
    }, { threshold: 0.3 });
    obs.observe(root);
  })();
</script>
