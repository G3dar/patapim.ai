<div class="hm-vd" data-hm-vd>
  <div class="hm-chrome">
    <div class="hm-dots">
      <span class="hm-dot hm-dot-r"></span>
      <span class="hm-dot hm-dot-y"></span>
      <span class="hm-dot hm-dot-g"></span>
    </div>
    <span class="hm-title">Terminal</span>
    <button class="hm-mic" data-hm-mic aria-label="Microphone">
      <svg width="10" height="10" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round">
        <rect x="9" y="2" width="6" height="11" rx="3"/>
        <path d="M5 10a7 7 0 0 0 14 0"/>
        <line x1="12" y1="17" x2="12" y2="21"/>
      </svg>
    </button>
  </div>
  <div class="hm-body">
    <div class="hm-ln"><span class="hm-pr">~$</span> claude</div>
    <div class="hm-ln hm-dim">Claude Code initialized</div>
    <div class="hm-prompt-line">
      <span class="hm-pr">&gt;</span>
      <span class="hm-typed" data-hm-typed></span>
      <span class="hm-blink" data-hm-cursor>|</span>
    </div>
    <div class="hm-response" data-hm-response></div>
    <div class="hm-waveform" data-hm-wave>
      <span class="hm-bar"></span>
      <span class="hm-bar"></span>
      <span class="hm-bar"></span>
      <span class="hm-bar"></span>
      <span class="hm-bar"></span>
    </div>
  </div>
</div>

<style>
  .hm-vd {
    width: 280px;
    border-radius: 8px;
    overflow: hidden;
    border: 1px solid var(--border-strong);
    background: var(--bg-deep);
    box-shadow: 0 8px 32px rgba(0,0,0,0.4);
  }
  .hm-chrome {
    background: var(--bg-tertiary);
    padding: 6px 10px;
    display: flex;
    align-items: center;
    gap: 8px;
    border-bottom: 1px solid var(--border-default);
  }
  .hm-dots { display: flex; gap: 4px; }
  .hm-dot { width: 6px; height: 6px; border-radius: 50%; }
  .hm-dot-r { background: #ff5f57; }
  .hm-dot-y { background: #febc2e; }
  .hm-dot-g { background: #28c840; }
  .hm-title {
    font-family: var(--font-mono);
    font-size: 9px;
    color: var(--text-tertiary);
    flex: 1;
  }
  .hm-mic {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    border: 1px solid var(--border-default);
    background: transparent;
    color: var(--text-muted);
    cursor: default;
    transition: all 0.3s ease;
    padding: 0;
  }
  .hm-mic.hm-active {
    color: #fff;
    background: var(--warning);
    border-color: var(--warning);
    box-shadow: 0 0 8px rgba(224,164,88,0.5);
  }

  .hm-body {
    background: var(--bg-deep);
    padding: 10px 12px;
    height: 146px;
    font-family: var(--font-mono);
    font-size: 9px;
    line-height: 1.6;
    color: var(--text-secondary);
    position: relative;
    overflow: hidden;
  }
  .hm-pr { color: var(--accent-primary); margin-right: 4px; }
  .hm-dim { opacity: 0.5; }
  .hm-ln { white-space: nowrap; }
  .hm-prompt-line { white-space: nowrap; }
  .hm-typed { color: var(--text-primary); }
  .hm-blink {
    color: var(--accent-primary);
    animation: hm-blink-vd 1s step-end infinite;
  }
  @keyframes hm-blink-vd {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }

  .hm-response {
    opacity: 0;
    color: var(--success);
    white-space: nowrap;
    transition: opacity 0.4s ease;
    margin-top: 2px;
  }
  .hm-response.hm-show { opacity: 1; }

  .hm-waveform {
    position: absolute;
    bottom: 10px;
    right: 12px;
    display: flex;
    align-items: flex-end;
    gap: 2px;
    height: 16px;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  .hm-waveform.hm-show { opacity: 1; }

  .hm-bar {
    width: 2px;
    background: var(--warning);
    border-radius: 1px;
    height: 4px;
  }
  .hm-waveform.hm-show .hm-bar {
    animation: hm-wave 0.6s ease-in-out infinite alternate;
  }
  .hm-waveform.hm-show .hm-bar:nth-child(1) { animation-delay: 0s; }
  .hm-waveform.hm-show .hm-bar:nth-child(2) { animation-delay: 0.1s; }
  .hm-waveform.hm-show .hm-bar:nth-child(3) { animation-delay: 0.2s; }
  .hm-waveform.hm-show .hm-bar:nth-child(4) { animation-delay: 0.3s; }
  .hm-waveform.hm-show .hm-bar:nth-child(5) { animation-delay: 0.15s; }

  @keyframes hm-wave {
    0% { height: 3px; }
    100% { height: 14px; }
  }

  @media (max-width: 768px) {
    .hm-vd { width: 100%; max-width: 320px; }
  }

  @media (prefers-reduced-motion: reduce) {
    .hm-blink { animation: none; opacity: 1; }
    .hm-bar { animation: none !important; }
    .hm-waveform { opacity: 0; }
    .hm-response { opacity: 1; }
    .hm-mic { background: var(--warning); color: #fff; border-color: var(--warning); }
  }
</style>

<script>
  (function() {
    const root = document.querySelector('[data-hm-vd]') as HTMLElement;
    if (!root) return;

    const mic = root.querySelector('[data-hm-mic]') as HTMLElement;
    const typed = root.querySelector('[data-hm-typed]') as HTMLElement;
    const cursor = root.querySelector('[data-hm-cursor]') as HTMLElement;
    const response = root.querySelector('[data-hm-response]') as HTMLElement;
    const wave = root.querySelector('[data-hm-wave]') as HTMLElement;

    if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
      typed.textContent = 'fix the login bug';
      response.textContent = '✓ Fixed login validation';
      response.classList.add('hm-show');
      mic.classList.add('hm-active');
      cursor.style.display = 'none';
      return;
    }

    let running = false;
    let animId: ReturnType<typeof setTimeout> | null = null;

    function wait(ms: number): Promise<void> {
      return new Promise(resolve => {
        animId = setTimeout(resolve, ms);
      });
    }

    function resetState() {
      typed.textContent = '';
      response.textContent = '';
      response.classList.remove('hm-show');
      mic.classList.remove('hm-active');
      wave.classList.remove('hm-show');
      cursor.style.display = '';
    }

    async function typeText(text: string) {
      for (let i = 0; i < text.length; i++) {
        if (!running) return;
        typed.textContent += text[i];
        await wait(55 + Math.random() * 30);
      }
    }

    async function startLoop() {
      while (running) {
        resetState();

        // Scene 1: idle with blinking cursor (1s)
        await wait(1000);
        if (!running) break;

        // Scene 2: mic activates, waveform appears
        mic.classList.add('hm-active');
        wave.classList.add('hm-show');
        await wait(800);
        if (!running) break;

        // Scene 3: type text
        await typeText('fix the login bug');
        if (!running) break;
        await wait(300);
        if (!running) break;

        // Scene 4: waveform stops, response appears
        wave.classList.remove('hm-show');
        mic.classList.remove('hm-active');
        cursor.style.display = 'none';
        await wait(400);
        if (!running) break;

        response.textContent = '✓ Fixed login validation';
        response.classList.add('hm-show');
        await wait(2500);
        if (!running) break;

        // Fade out
        root.style.opacity = '0';
        root.style.transition = 'opacity 0.4s ease';
        await wait(400);
        if (!running) break;
        root.style.opacity = '1';
      }
    }

    const obs = new IntersectionObserver((entries) => {
      entries.forEach(e => {
        if (e.isIntersecting && !running) {
          running = true;
          startLoop();
        } else if (!e.isIntersecting && running) {
          running = false;
          if (animId) { clearTimeout(animId); animId = null; }
          resetState();
          root.style.opacity = '1';
        }
      });
    }, { threshold: 0.3 });
    obs.observe(root);
  })();
</script>
