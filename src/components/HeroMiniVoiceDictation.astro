  <div class="hm-body">
    <!-- Mic + waveform centered scene -->
    <div class="hm-mic-scene" data-hm-mic-scene>
      <div class="hm-mic-ring" data-hm-ring>
        <div class="hm-mic-btn" data-hm-mic>
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round">
