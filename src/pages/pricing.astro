---
export const prerender = true;

import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

const freeFeatures = [
  { name: 'Terminals', value: 'Up to 9' },
  { name: 'Active Projects', value: 'Up to 3' },
  { name: 'View Mode', value: 'Tab + Grid (all layouts)' },
  { name: 'Voice Dictation', value: '60 min / week' },
  { name: 'Remote Access', value: 'Local network (LAN)' },
  { name: 'Remote Sessions', value: '1 max, 30-min timeout' },
  { name: 'Remote Auth', value: 'PIN only' },
  { name: 'Task Panel', value: 'No' },
  { name: 'GitHub Panel', value: 'No' },
  { name: 'Plugin Marketplace', value: 'No' },
  { name: 'File Editor', value: 'Yes' },
  { name: 'Context Preservation', value: 'Yes' },
  { name: 'Session Persistence', value: 'Yes' },
  { name: 'Auto-Updates', value: 'Yes' },
];

const proFeatures = [
  { name: 'Terminals', value: 'Unlimited' },
  { name: 'Active Projects', value: 'Unlimited' },
  { name: 'View Mode', value: 'Tab + Grid (all layouts)' },
  { name: 'Voice Dictation', value: 'Unlimited (Whisper + Web Speech)' },
  { name: 'Remote Access', value: 'URL from anywhere (Cloudflare Tunnels)' },
  { name: 'Remote Sessions', value: 'Unlimited, no timeout' },
  { name: 'Remote Auth', value: 'PassKey / Biometric' },
  { name: 'Task Panel', value: 'Yes' },
  { name: 'GitHub Panel', value: 'Yes' },
  { name: 'Plugin Marketplace', value: 'Yes' },
  { name: 'File Editor', value: 'Yes' },
  { name: 'Context Preservation', value: 'Yes' },
  { name: 'Session Persistence', value: 'Yes' },
  { name: 'Auto-Updates', value: 'Yes' },
];

const faq = [
  {
    q: 'What happens after the 14-day trial?',
    a: 'You automatically switch to the Free plan. No data is lost, no features are deleted &mdash; Pro features simply become unavailable. You can upgrade anytime.'
  },
  {
    q: 'What does "Unlock Forever" include?',
    a: 'All Pro features, permanently. One-time payment of $29.99, no recurring charges. This offer is available for a limited time during early access.'
  },
  {
    q: 'Can I use PATAPIM commercially for free?',
    a: 'Yes. The Free plan is free for commercial use. Pro features like unlimited dictation, full remote access, and task management require a Pro subscription or lifetime unlock.'
  },
  {
    q: 'What payment methods are accepted?',
    a: 'We use Stripe for payments. All major credit cards, debit cards, and regional payment methods supported by Stripe.'
  },
  {
    q: 'Can I cancel anytime?',
    a: 'Yes. Cancel via Stripe Customer Portal. Your Pro access continues until the end of the billing period. Then you switch to Free.'
  },
  {
    q: 'Is PATAPIM open source?',
    a: 'No. PATAPIM is proprietary software. The Free plan is available at no cost, but the source code is not open source.'
  },
];
---

<BaseLayout title="Pricing â€” PATAPIM" description="PATAPIM pricing plans. Start free, upgrade to Pro for unlimited terminals, remote access, voice dictation, and more.">
  <Navbar />

  <main class="pricing-page">
    <div class="container">
      <div class="section-header" style="padding-top: 120px;">
        <span class="section-label">Pricing</span>
        <h1 class="section-title">Simple, Transparent Pricing</h1>
        <p class="section-subtitle">
          Start with a 14-day Pro trial. No credit card required.
        </p>
      </div>

      <!-- Pricing Cards -->
      <div class="pricing-cards">
        <div class="p-card">
          <h3>Free</h3>
          <div class="p-price"><span class="p-amount">$0</span> <span class="p-period">forever</span></div>
          <p class="p-desc">Everything you need to get started.</p>
          <a href="/download" class="btn btn-secondary" style="width:100%; justify-content:center;">Download Free</a>
          <ul class="p-list">
            {freeFeatures.map((f) => (
              <li>
                <span class="p-label">{f.name}</span>
                <span class={`p-value ${f.value === 'No' ? 'dim' : ''}`}>{f.value}</span>
              </li>
            ))}
          </ul>
        </div>

        <div class="p-card featured">
          <div class="p-badge">14-Day Free Trial</div>
          <h3>Pro</h3>
          <div class="p-price">
            <span class="p-amount">$6.99</span>
            <span class="p-period">/month</span>
          </div>
          <p class="p-desc">Full power, no limits.</p>
          <a href="#" class="btn btn-primary" id="checkout-monthly" style="width:100%; justify-content:center;">Start Free Trial</a>
          <ul class="p-list">
            {proFeatures.map((f) => (
              <li>
                <span class="p-label">{f.name}</span>
                <span class="p-value highlight">{f.value}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>

      <!-- Unlock Forever Banner -->
      <div class="unlock-section">
        <div class="unlock-card">
          <span class="unlock-badge">Limited Time Offer</span>
          <h3 class="unlock-title">Unlock Forever</h3>
          <p class="unlock-desc">
            One-time payment. All Pro features for life.
            No subscriptions, no renewals &mdash; ever.
          </p>
          <div class="unlock-price-row">
            <div class="unlock-price-area">
              <span class="unlock-price">$29.99</span>
              <span class="unlock-once">one-time payment</span>
            </div>
            <a href="#" class="btn btn-primary" id="checkout-lifetime">Get Lifetime Access</a>
          </div>
        </div>
      </div>

      <!-- FAQ -->
      <div class="faq-section section">
        <h2 class="section-title" style="font-size: 28px;">Frequently Asked Questions</h2>
        <div class="faq-grid">
          {faq.map((item) => (
            <div class="faq-item">
              <h4>{item.q}</h4>
              <p set:html={item.a} />
            </div>
          ))}
        </div>
      </div>
    </div>
  </main>

  <Footer />
</BaseLayout>

<style>
  .pricing-page {
    min-height: 100vh;
  }

  .pricing-cards {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-xl);
    max-width: 800px;
    margin: 0 auto;
  }

  .p-card {
    background: var(--bg-secondary);
    border: 1px solid var(--border-default);
    border-radius: var(--radius-xl);
    padding: var(--space-2xl);
    position: relative;
  }

  .p-card.featured {
    border-color: var(--accent-primary);
    box-shadow: 0 0 40px rgba(212, 165, 116, 0.1);
  }

  .p-badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--accent-primary);
    color: var(--bg-deep);
    font-size: 12px;
    font-weight: 600;
    padding: 4px 16px;
    border-radius: 100px;
    white-space: nowrap;
  }

  .p-card h3 {
    font-size: 22px;
    font-weight: 600;
    margin-bottom: var(--space-sm);
  }

  .p-price {
    display: flex;
    align-items: baseline;
    gap: 4px;
    margin-bottom: var(--space-xs);
  }
  .p-amount {
    font-size: 48px;
    font-weight: 700;
    font-family: var(--font-mono);
  }
  .p-period {
    font-size: 16px;
    color: var(--text-tertiary);
  }
  .p-desc {
    font-size: 14px;
    color: var(--text-tertiary);
    margin-bottom: var(--space-xl);
  }

  .p-list {
    list-style: none;
    margin-top: var(--space-xl);
    border-top: 1px solid var(--border-subtle);
    padding-top: var(--space-lg);
  }
  .p-list li {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 0;
    border-bottom: 1px solid var(--border-subtle);
    font-size: 14px;
  }
  .p-label { color: var(--text-secondary); }
  .p-value { color: var(--text-primary); font-weight: 500; }
  .p-value.dim { color: var(--text-muted); font-weight: 400; }
  .p-value.highlight { color: var(--accent-primary); }

  /* Unlock Forever */
  .unlock-section {
    max-width: 800px;
    margin: var(--space-2xl) auto 0;
  }

  .unlock-card {
    background: var(--bg-secondary);
    border: 1px solid var(--border-strong);
    border-radius: var(--radius-xl);
    padding: var(--space-2xl);
    text-align: center;
  }

  .unlock-badge {
    display: inline-block;
    font-family: var(--font-mono);
    font-size: 11px;
    color: var(--warning);
    background: rgba(224, 164, 88, 0.12);
    padding: 4px 12px;
    border-radius: 100px;
    margin-bottom: var(--space-md);
  }

  .unlock-title {
    font-size: 24px;
    font-weight: 600;
    margin-bottom: var(--space-sm);
  }

  .unlock-desc {
    font-size: 15px;
    color: var(--text-secondary);
    line-height: 1.6;
    max-width: 480px;
    margin: 0 auto var(--space-xl);
  }

  .unlock-price-row {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2xl);
  }

  .unlock-price-area {
    text-align: center;
  }

  .unlock-price {
    display: block;
    font-size: 42px;
    font-weight: 700;
    font-family: var(--font-mono);
    color: var(--text-primary);
  }

  .unlock-once {
    display: block;
    font-size: 13px;
    color: var(--text-tertiary);
    margin-top: 2px;
  }

  /* FAQ */
  .faq-section {
    max-width: 800px;
    margin: 0 auto;
  }

  .faq-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-xl);
    margin-top: var(--space-2xl);
  }

  .faq-item h4 {
    font-size: 15px;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: var(--space-sm);
  }
  .faq-item p {
    font-size: 14px;
    color: var(--text-secondary);
    line-height: 1.7;
  }

  @media (max-width: 640px) {
    .pricing-cards { grid-template-columns: 1fr; }
    .faq-grid { grid-template-columns: 1fr; }
    .unlock-price-row {
      flex-direction: column;
      gap: var(--space-lg);
    }
  }
</style>

<script>
  async function handleCheckout(plan: 'pro' | 'lifetime') {
    const btn = document.getElementById(plan === 'pro' ? 'checkout-monthly' : 'checkout-lifetime');
    if (btn) btn.setAttribute('disabled', '');
    try {
      // Best-effort: include authenticated email if signed in
      let email: string | undefined;
      try {
        const sessionRes = await fetch('/api/auth/session');
        if (sessionRes.ok) {
          const sessionData = await sessionRes.json();
          if (sessionData.authenticated) email = sessionData.user.email;
        }
      } catch {}

      const res = await fetch('/api/stripe/checkout', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ plan, email }),
      });
      const data = await res.json();
      if (data.url) {
        window.location.href = data.url;
      } else {
        console.error('Checkout error:', data.error);
        if (btn) btn.removeAttribute('disabled');
      }
    } catch (err) {
      console.error('Checkout error:', err);
      if (btn) btn.removeAttribute('disabled');
    }
  }

  document.getElementById('checkout-monthly')?.addEventListener('click', (e) => {
    e.preventDefault();
    handleCheckout('pro');
  });

  document.getElementById('checkout-lifetime')?.addEventListener('click', (e) => {
    e.preventDefault();
    handleCheckout('lifetime');
  });
</script>
