---
export const prerender = true;

import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="Download PATAPIM" description="Download PATAPIM for Windows. Terminal-first IDE framework for AI development.">
  <Navbar />

  <main class="download-page">
    <div class="container">
      <div class="section-header" style="padding-top: 120px;">
        <span class="section-label">Download</span>
        <h1 class="section-title">Get PATAPIM</h1>
        <p class="section-subtitle">
          Terminal-first development, supercharged with AI.
        </p>
      </div>

      <!-- License Banner (shown after purchase) -->
      <div class="license-banner" id="license-banner" style="display:none;">
        <span class="license-badge">Purchase Complete</span>
        <p class="license-text">Your license key:</p>
        <div class="license-key-display">
          <code id="license-key-value"></code>
          <button class="dl-copy-btn" id="copy-license-btn" aria-label="Copy license key">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="9" y="9" width="13" height="13" rx="2"/><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/></svg>
          </button>
        </div>
        <p class="license-note">Save this key. It's also been emailed to your Stripe billing address.</p>
      </div>

      <div class="download-grid">
        <!-- Windows -->
        <div class="dl-card active">
          <div class="dl-icon">
            <svg width="40" height="40" viewBox="0 0 24 24" fill="currentColor">
              <path d="M0 3.449L9.75 2.1v9.451H0m10.949-9.602L24 0v11.4H10.949M0 12.6h9.75v9.451L0 20.699M10.949 12.6H24V24l-12.9-1.801"/>
            </svg>
          </div>
          <h3>Windows</h3>
          <p class="dl-version">Windows 10 or later</p>
          <a href="https://github.com/g3dar/patapim/releases/latest" class="btn btn-primary" style="width: 100%; justify-content: center;" target="_blank" rel="noopener">
            Download Installer (.exe)
          </a>
          <div class="dl-install-cmds">
            <div class="dl-cmd-block">
              <span class="dl-cmd-label">PowerShell</span>
              <div class="dl-cmd-line" data-dl-copy="irm https://raw.githubusercontent.com/g3dar/patapim/main/install.ps1 | iex">
                <code>irm https://raw.githubusercontent.com/g3dar/patapim/main/install.ps1 | iex</code>
                <button class="dl-copy-btn" aria-label="Copy">
                  <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="9" y="9" width="13" height="13" rx="2"/><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/></svg>
                </button>
              </div>
            </div>
            <div class="dl-cmd-block">
              <span class="dl-cmd-label">CMD</span>
              <div class="dl-cmd-line" data-dl-copy='curl -fsSL https://raw.githubusercontent.com/g3dar/patapim/main/install.cmd -o "%TEMP%\patapim-install.cmd" && "%TEMP%\patapim-install.cmd"'>
                <code>curl -fsSL https://raw.githubusercontent.com/g3dar/patapim/main/install.cmd -o "%TEMP%\patapim-install.cmd" &amp;&amp; "%TEMP%\patapim-install.cmd"</code>
                <button class="dl-copy-btn" aria-label="Copy">
                  <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="9" y="9" width="13" height="13" rx="2"/><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/></svg>
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- macOS -->
        <div class="dl-card disabled">
          <div class="dl-icon dim">
            <svg width="40" height="40" viewBox="0 0 24 24" fill="currentColor">
              <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.8-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
            </svg>
          </div>
          <h3>macOS</h3>
          <p class="dl-version">Coming Soon</p>
          <button class="btn btn-secondary" disabled style="width: 100%; justify-content: center; opacity: 0.5; cursor: not-allowed;">
            Coming Soon
          </button>
          <p class="dl-note">Build from source works on macOS today. Native app packaging in progress.</p>
        </div>

        <!-- Linux -->
        <div class="dl-card disabled">
          <div class="dl-icon dim">
            <svg width="40" height="40" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12.504 0c-.155 0-.315.008-.48.021-4.226.333-3.105 4.807-3.17 6.298-.076 1.092-.3 1.953-1.05 3.02-.885 1.051-2.127 2.75-2.716 4.521-.278.832-.41 1.684-.287 2.489a.424.424 0 00-.11.135c-.26.268-.45.6-.663.839-.199.199-.485.267-.797.4-.313.136-.658.269-.864.68-.09.189-.136.394-.132.602 0 .199.027.4.055.536.058.399.116.728.04.97-.249.68-.28 1.145-.106 1.484.174.334.535.47.94.601.81.2 1.91.135 2.774.6.926.466 1.866.67 2.616.47.526-.116.97-.464 1.208-.946.587-.003 1.23-.269 2.26-.334.699-.058 1.574.267 2.577.2.025.134.063.198.114.333l.003.003c.391.778 1.113 1.368 1.884 1.43.868.07 1.723-.136 2.582-.796 1.227-.935 1.576-2.076 2.034-3.186.121-.297.239-.594.371-.886.283-.605.457-1.264.365-1.938-.098-.727-.56-1.36-1.14-1.543a.715.715 0 00-.095-.03c-.195-1.244-.842-1.648-1.305-2.527-.317-.6-.672-.972-1.067-1.24-.15-.1-.3-.186-.456-.26.029-.067.06-.134.086-.203.27-.717.196-1.594-.26-2.457.016-.148.023-.297.023-.45-.002-2.675-1.645-4.923-4.293-5.08zM12.5 1.17c2.032.128 3.266 1.898 3.267 4.063 0 .15-.008.298-.025.445C15.32 5.308 14.63 5.16 13.85 5.3c-.494.089-1.019.34-1.345.773-.09-.067-.179-.15-.279-.212-.236-.161-.479-.249-.748-.271-.135-.01-.272.01-.4.044-.236-.587-.493-1.132-.81-1.469-.318-.336-.672-.55-1.12-.573-.455-.023-.91.149-1.346.397-.436.249-.861.554-1.244.868l-.03.025c-.032-1.407-.127-4.796 2.972-5.068a3.715 3.715 0 01.48-.021z"/>
            </svg>
          </div>
          <h3>Linux</h3>
          <p class="dl-version">Coming Soon</p>
          <button class="btn btn-secondary" disabled style="width: 100%; justify-content: center; opacity: 0.5; cursor: not-allowed;">
            Coming Soon
          </button>
          <p class="dl-note">Build from source works on Linux today. AppImage and .deb packages planned.</p>
        </div>
      </div>

      <!-- Requirements -->
      <div class="requirements section">
        <h2 style="font-size: 24px; margin-bottom: var(--space-xl); text-align: center;">System Requirements</h2>
        <div class="req-grid">
          <div class="req-item">
            <h4>Operating System</h4>
            <p>Windows 10 or later (64-bit)</p>
          </div>
          <div class="req-item">
            <h4>Runtime</h4>
            <p>Node.js 18+ and Git</p>
          </div>
          <div class="req-item">
            <h4>Disk Space</h4>
            <p>~200 MB (with dependencies)</p>
          </div>
          <div class="req-item">
            <h4>AI CLI</h4>
            <p>Claude Code, Codex, or Gemini CLI installed</p>
          </div>
        </div>
      </div>

      <!-- Install from source -->
      <div class="source-install">
        <h2 style="font-size: 24px; margin-bottom: var(--space-xl); text-align: center;">Install from Source</h2>
        <div class="source-terminal">
          <div class="st-header">
            <span class="st-dot"></span><span class="st-dot"></span><span class="st-dot"></span>
          </div>
          <div class="st-body">
            <div class="st-line"><span class="st-comment"># Prerequisites: Node.js 18+, Git</span></div>
            <div class="st-line">&nbsp;</div>
            <div class="st-line"><span class="st-prompt">$</span> git clone https://github.com/g3dar/patapim.git</div>
            <div class="st-line"><span class="st-prompt">$</span> cd patapim</div>
            <div class="st-line"><span class="st-prompt">$</span> npm install</div>
            <div class="st-line"><span class="st-prompt">$</span> npm start</div>
            <div class="st-line">&nbsp;</div>
            <div class="st-line st-accent">&#x276F;_ PATAPIM is ready. Open a project and start developing!</div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</BaseLayout>

<style>
  .download-page {
    min-height: 100vh;
  }

  .download-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-xl);
    max-width: 960px;
    margin: 0 auto;
  }

  .dl-card {
    background: var(--bg-secondary);
    border: 1px solid var(--border-default);
    border-radius: var(--radius-xl);
    padding: var(--space-2xl);
    text-align: center;
  }
  .dl-card.active {
    border-color: var(--accent-primary);
    box-shadow: 0 0 30px rgba(212, 165, 116, 0.1);
  }

  .dl-icon {
    color: var(--text-primary);
    margin-bottom: var(--space-lg);
  }
  .dl-icon.dim {
    color: var(--text-muted);
  }

  .dl-card h3 {
    font-size: 20px;
    margin-bottom: var(--space-xs);
  }

  .dl-version {
    font-size: 14px;
    color: var(--text-tertiary);
    margin-bottom: var(--space-xl);
  }

  /* Install commands */
  .dl-install-cmds {
    margin-top: var(--space-lg);
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
    text-align: left;
  }
  .dl-cmd-block {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }
  .dl-cmd-label {
    font-family: var(--font-mono);
    font-size: 10px;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  .dl-cmd-line {
    display: flex;
    align-items: center;
    gap: 6px;
    background: var(--bg-tertiary);
    border: 1px solid var(--border-default);
    border-radius: var(--radius-sm);
    padding: 6px 10px;
  }
  .dl-cmd-line code {
    flex: 1;
    font-size: 10px;
    background: none;
    padding: 0;
    color: var(--accent-primary);
    word-break: break-all;
    line-height: 1.4;
  }
  .dl-copy-btn {
    flex-shrink: 0;
    background: none;
    border: none;
    cursor: pointer;
    color: var(--text-muted);
    padding: 2px;
    transition: color var(--transition-fast);
  }
  .dl-copy-btn:hover {
    color: var(--accent-primary);
  }
  .dl-copy-btn.copied {
    color: var(--success);
  }

  .dl-note {
    margin-top: var(--space-lg);
    font-size: 13px;
    color: var(--text-muted);
  }

  /* Requirements */
  .req-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-lg);
    max-width: 800px;
    margin: 0 auto;
  }
  .req-item {
    text-align: center;
    padding: var(--space-xl);
    background: var(--bg-secondary);
    border: 1px solid var(--border-default);
    border-radius: var(--radius-lg);
  }
  .req-item h4 {
    font-size: 14px;
    font-weight: 600;
    margin-bottom: var(--space-sm);
    color: var(--accent-primary);
  }
  .req-item p {
    font-size: 13px;
    color: var(--text-secondary);
  }

  /* Source install */
  .source-install {
    max-width: 640px;
    margin: 0 auto;
    padding-bottom: var(--space-4xl);
  }
  .source-terminal {
    background: var(--bg-deep);
    border: 1px solid var(--border-strong);
    border-radius: var(--radius-xl);
    overflow: hidden;
  }
  .st-header {
    display: flex;
    gap: 6px;
    padding: 12px 16px;
    background: var(--bg-tertiary);
    border-bottom: 1px solid var(--border-default);
  }
  .st-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--bg-hover);
  }
  .st-body {
    padding: 20px 24px;
    font-family: var(--font-mono);
    font-size: 13px;
    line-height: 2;
  }
  .st-line { color: var(--text-secondary); }
  .st-prompt { color: var(--accent-primary); margin-right: 8px; }
  .st-comment { color: var(--text-muted); }
  .st-accent { color: var(--accent-primary); }

  /* License Banner */
  .license-banner {
    max-width: 600px;
    margin: 0 auto var(--space-3xl);
    padding: var(--space-2xl);
    background: var(--bg-secondary);
    border: 1px solid var(--accent-primary);
    border-radius: var(--radius-xl);
    text-align: center;
    box-shadow: 0 0 30px rgba(212, 165, 116, 0.1);
  }
  .license-badge {
    display: inline-block;
    font-family: var(--font-mono);
    font-size: 11px;
    font-weight: 600;
    color: var(--bg-deep);
    background: var(--accent-primary);
    padding: 4px 14px;
    border-radius: 100px;
    margin-bottom: var(--space-md);
  }
  .license-text {
    font-size: 14px;
    color: var(--text-secondary);
    margin-bottom: var(--space-sm);
  }
  .license-key-display {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    background: var(--bg-tertiary);
    border: 1px solid var(--border-default);
    border-radius: var(--radius-md);
    padding: var(--space-md) var(--space-lg);
    margin-bottom: var(--space-md);
  }
  .license-key-display code {
    font-size: 18px;
    font-weight: 600;
    color: var(--accent-primary);
    background: none;
    padding: 0;
    letter-spacing: 1px;
  }
  .license-note {
    font-size: 12px;
    color: var(--text-muted);
  }

  @media (max-width: 768px) {
    .download-grid { grid-template-columns: 1fr; max-width: 400px; }
    .req-grid { grid-template-columns: 1fr 1fr; }
  }
  @media (max-width: 480px) {
    .req-grid { grid-template-columns: 1fr; }
  }
</style>

<script>
  // Copy command buttons
  document.querySelectorAll('[data-dl-copy] .dl-copy-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const line = btn.closest('[data-dl-copy]') as HTMLElement;
      const text = line?.dataset.dlCopy;
      if (text) {
        navigator.clipboard.writeText(text).then(() => {
          btn.classList.add('copied');
          setTimeout(() => btn.classList.remove('copied'), 1500);
        });
      }
    });
  });

  // Copy license key button
  document.getElementById('copy-license-btn')?.addEventListener('click', () => {
    const key = document.getElementById('license-key-value')?.textContent;
    if (key) {
      navigator.clipboard.writeText(key).then(() => {
        const btn = document.getElementById('copy-license-btn')!;
        btn.classList.add('copied');
        setTimeout(() => btn.classList.remove('copied'), 1500);
      });
    }
  });

  // Detect ?session_id from Stripe checkout redirect
  const params = new URLSearchParams(window.location.search);
  const sessionId = params.get('session_id');

  if (sessionId) {
    (async () => {
      const delays = [1000, 2000, 4000];
      for (let attempt = 0; attempt <= delays.length; attempt++) {
        try {
          const res = await fetch('/api/stripe/session-info', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ sessionId }),
          });
          const data = await res.json();
          if (data.found && data.licenseKey) {
            const banner = document.getElementById('license-banner')!;
            document.getElementById('license-key-value')!.textContent = data.licenseKey;
            banner.style.display = 'block';
            return;
          }
        } catch {}
        if (attempt < delays.length) {
          await new Promise(r => setTimeout(r, delays[attempt]));
        }
      }
    })();
  }
</script>
