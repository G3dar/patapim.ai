---
export const prerender = true;

import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="Download PATAPIM" description="Download PATAPIM for Windows. Terminal-first IDE framework for AI development.">
  <Navbar />

  <main class="download-page">
    <div class="container">
      <div class="section-header" style="padding-top: 120px;">
        <span class="section-label">Download</span>
        <h1 class="section-title">Get PATAPIM</h1>
        <p class="section-subtitle">
          Terminal-first development, supercharged with AI.
        </p>
      </div>

      <!-- License Banner (shown after purchase) -->
      <div class="license-banner" id="license-banner" style="display:none;">
        <span class="license-badge">Purchase Complete</span>
        <p class="license-text">Your license key:</p>
        <div class="license-key-display">
          <code id="license-key-value"></code>
          <button class="dl-copy-btn" id="copy-license-btn" aria-label="Copy license key">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="9" y="9" width="13" height="13" rx="2"/><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/></svg>
          </button>
        </div>
        <p class="license-note">Save this key. It's also been emailed to your Stripe billing address.</p>
      </div>

      <!-- Windows - Full Width -->
      <div class="dl-card-windows">
        <div class="dl-windows-top">
          <div class="dl-icon">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="currentColor">
              <path d="M0 3.449L9.75 2.1v9.451H0m10.949-9.602L24 0v11.4H10.949M0 12.6h9.75v9.451L0 20.699M10.949 12.6H24V24l-12.9-1.801"/>
            </svg>
          </div>
          <h3>Windows</h3>
          <p class="dl-version">Windows 10 or later</p>
          <a href="/api/download/latest" class="btn btn-primary" style="justify-content: center; max-width: 320px; width: 100%;">
            Download Installer (.exe)
          </a>
        </div>
        <div class="dl-install-cmds">
          <div class="dl-cmd-block">
            <span class="dl-cmd-label">PowerShell</span>
            <div class="dl-cmd-line" data-dl-copy="irm https://raw.githubusercontent.com/G3dar/patapim-releases/main/install.ps1 | iex">
              <code>irm https://raw.githubusercontent.com/G3dar/patapim-releases/main/install.ps1 | iex</code>
              <button class="dl-copy-btn" aria-label="Copy">
                <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="9" y="9" width="13" height="13" rx="2"/><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/></svg>
              </button>
            </div>
          </div>
          <div class="dl-cmd-block">
            <span class="dl-cmd-label">CMD</span>
            <div class="dl-cmd-line" data-dl-copy='curl -fsSL https://raw.githubusercontent.com/G3dar/patapim-releases/main/install.cmd -o "%TEMP%\patapim-install.cmd" && "%TEMP%\patapim-install.cmd"'>
              <code>curl -fsSL https://raw.githubusercontent.com/G3dar/patapim-releases/main/install.cmd -o "%TEMP%\patapim-install.cmd" &amp;&amp; "%TEMP%\patapim-install.cmd"</code>
              <button class="dl-copy-btn" aria-label="Copy">
                <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="9" y="9" width="13" height="13" rx="2"/><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/></svg>
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- macOS - Coming Soon -->
      <div class="dl-card-macos">
        <div class="dl-icon dim">
          <svg width="28" height="28" viewBox="0 0 24 24" fill="currentColor">
            <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.8-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
          </svg>
        </div>
        <h3>macOS</h3>
        <span class="dl-coming-soon">Coming Soon</span>
      </div>

      <!-- Requirements -->
      <div class="requirements section">
        <h2 style="font-size: 24px; margin-bottom: var(--space-xl); text-align: center;">System Requirements</h2>
        <div class="req-grid">
          <div class="req-item">
            <h4>Operating System</h4>
            <p>Windows 10 or later (64-bit)</p>
          </div>
          <div class="req-item">
            <h4>Runtime</h4>
            <p>Node.js 18+ and Git</p>
          </div>
          <div class="req-item">
            <h4>Disk Space</h4>
            <p>~200 MB (with dependencies)</p>
          </div>
          <div class="req-item">
            <h4>AI CLI</h4>
            <p>Claude Code, Codex, or Gemini CLI installed</p>
          </div>
        </div>
      </div>

    </div>
  </main>

  <Footer />
</BaseLayout>

<style>
  .download-page {
    min-height: 100vh;
  }

  /* Windows card - full width */
  .dl-card-windows {
    background: var(--bg-secondary);
    border: 1px solid var(--accent-primary);
    border-radius: var(--radius-xl);
    padding: var(--space-2xl) var(--space-3xl);
    text-align: center;
    box-shadow: 0 0 30px rgba(212, 165, 116, 0.1);
    margin-bottom: var(--space-xl);
  }
  .dl-windows-top {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: var(--space-xl);
  }
  .dl-card-windows h3 {
    font-size: 24px;
    margin-bottom: var(--space-xs);
  }

  /* macOS card - compact */
  .dl-card-macos {
    background: var(--bg-secondary);
    border: 1px solid var(--border-default);
    border-radius: var(--radius-xl);
    padding: var(--space-xl) var(--space-2xl);
    display: flex;
    align-items: center;
    gap: var(--space-lg);
    max-width: 420px;
    margin: 0 auto;
  }
  .dl-card-macos h3 {
    font-size: 18px;
    margin-bottom: 0;
  }
  .dl-coming-soon {
    font-size: 12px;
    color: var(--text-muted);
    background: var(--bg-tertiary);
    border: 1px solid var(--border-default);
    padding: 4px 12px;
    border-radius: 100px;
    margin-left: auto;
  }

  .dl-icon {
    color: var(--text-primary);
    margin-bottom: var(--space-lg);
  }
  .dl-card-macos .dl-icon {
    margin-bottom: 0;
    flex-shrink: 0;
  }
  .dl-icon.dim {
    color: var(--text-muted);
  }

  .dl-version {
    font-size: 14px;
    color: var(--text-tertiary);
    margin-bottom: var(--space-xl);
  }

  /* Install commands */
  .dl-install-cmds {
    margin-top: var(--space-lg);
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
    text-align: left;
  }
  .dl-cmd-block {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }
  .dl-cmd-label {
    font-family: var(--font-mono);
    font-size: 11px;
    color: rgba(255, 255, 255, 0.5);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  .dl-cmd-line {
    display: flex;
    align-items: center;
    gap: 6px;
    background: var(--bg-tertiary);
    border: 1px solid var(--border-default);
    border-radius: var(--radius-sm);
    padding: 6px 10px;
  }
  .dl-cmd-line code {
    flex: 1;
    font-size: 12px;
    background: none;
    padding: 0;
    color: rgba(255, 255, 255, 0.85);
    word-break: break-all;
    line-height: 1.5;
  }
  .dl-copy-btn {
    flex-shrink: 0;
    background: none;
    border: none;
    cursor: pointer;
    color: var(--text-muted);
    padding: 2px;
    transition: color var(--transition-fast);
  }
  .dl-copy-btn:hover {
    color: var(--accent-primary);
  }
  .dl-copy-btn.copied {
    color: var(--success);
  }

  .dl-note {
    margin-top: var(--space-lg);
    font-size: 13px;
    color: var(--text-muted);
  }

  /* Requirements */
  .req-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-lg);
    max-width: 800px;
    margin: 0 auto;
  }
  .req-item {
    text-align: center;
    padding: var(--space-xl);
    background: var(--bg-secondary);
    border: 1px solid var(--border-default);
    border-radius: var(--radius-lg);
  }
  .req-item h4 {
    font-size: 14px;
    font-weight: 600;
    margin-bottom: var(--space-sm);
    color: var(--accent-primary);
  }
  .req-item p {
    font-size: 13px;
    color: var(--text-secondary);
  }


  /* License Banner */
  .license-banner {
    max-width: 600px;
    margin: 0 auto var(--space-3xl);
    padding: var(--space-2xl);
    background: var(--bg-secondary);
    border: 1px solid var(--accent-primary);
    border-radius: var(--radius-xl);
    text-align: center;
    box-shadow: 0 0 30px rgba(212, 165, 116, 0.1);
  }
  .license-badge {
    display: inline-block;
    font-family: var(--font-mono);
    font-size: 11px;
    font-weight: 600;
    color: var(--bg-deep);
    background: var(--accent-primary);
    padding: 4px 14px;
    border-radius: 100px;
    margin-bottom: var(--space-md);
  }
  .license-text {
    font-size: 14px;
    color: var(--text-secondary);
    margin-bottom: var(--space-sm);
  }
  .license-key-display {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    background: var(--bg-tertiary);
    border: 1px solid var(--border-default);
    border-radius: var(--radius-md);
    padding: var(--space-md) var(--space-lg);
    margin-bottom: var(--space-md);
  }
  .license-key-display code {
    font-size: 18px;
    font-weight: 600;
    color: var(--accent-primary);
    background: none;
    padding: 0;
    letter-spacing: 1px;
  }
  .license-note {
    font-size: 12px;
    color: var(--text-muted);
  }

  @media (max-width: 768px) {
    .dl-card-windows { padding: var(--space-xl); }
    .dl-card-macos { max-width: 100%; }
    .req-grid { grid-template-columns: 1fr 1fr; }
  }
  @media (max-width: 480px) {
    .req-grid { grid-template-columns: 1fr; }
  }
</style>

<script>
  // Copy command buttons
  document.querySelectorAll('[data-dl-copy] .dl-copy-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const line = btn.closest('[data-dl-copy]') as HTMLElement;
      const text = line?.dataset.dlCopy;
      if (text) {
        navigator.clipboard.writeText(text).then(() => {
          btn.classList.add('copied');
          setTimeout(() => btn.classList.remove('copied'), 1500);
        });
      }
    });
  });

  // Copy license key button
  document.getElementById('copy-license-btn')?.addEventListener('click', () => {
    const key = document.getElementById('license-key-value')?.textContent;
    if (key) {
      navigator.clipboard.writeText(key).then(() => {
        const btn = document.getElementById('copy-license-btn')!;
        btn.classList.add('copied');
        setTimeout(() => btn.classList.remove('copied'), 1500);
      });
    }
  });

  // Detect ?session_id from Stripe checkout redirect
  const params = new URLSearchParams(window.location.search);
  const sessionId = params.get('session_id');

  if (sessionId) {
    (async () => {
      const delays = [1000, 2000, 4000];
      for (let attempt = 0; attempt <= delays.length; attempt++) {
        try {
          const res = await fetch('/api/stripe/session-info', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ sessionId }),
          });
          const data = await res.json();
          if (data.found && data.licenseKey) {
            const banner = document.getElementById('license-banner')!;
            document.getElementById('license-key-value')!.textContent = data.licenseKey;
            banner.style.display = 'block';
            return;
          }
        } catch {}
        if (attempt < delays.length) {
          await new Promise(r => setTimeout(r, delays[attempt]));
        }
      }
    })();
  }
</script>
